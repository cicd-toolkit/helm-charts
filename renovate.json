{
    "extends": [
        "config:best-practices"
    ],
    "bumpVersion": "patch",
    "dependencyDashboard": true,
    "ignorePaths": [
        "archives/**"
    ],
    "prConcurrentLimit": 0,
    "prHourlyLimit": 0,
    "semanticCommits": "enabled",
    "semanticCommitScope": null,
    "semanticCommitType": "fix",
    "packageRules": [
        {
            "matchFileNames": [
                ".github/workflows/**"
            ],
            "semanticCommitType": "ci"
        },
        {
            "matchDepNames": [
                "helm",
                "kindest/node"
            ],
            "separateMinorPatch": true
        },
        {
            "matchDepNames": [
                "helm",
                "kindest/node"
            ],
            "matchUpdateTypes": [
                "major",
                "minor"
            ],
            "enabled": false
        },
        {
            "matchFileNames": [
                "charts/*/Chart.yaml",
                "charts/*/values.yaml"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "bumpVersion": "major",
            "semanticCommitType": "feat!"
        },
        {
            "matchFileNames": [
                "charts/*/Chart.yaml",
                "charts/*/values.yaml"
            ],
            "matchUpdateTypes": [
                "minor"
            ],
            "bumpVersion": "minor",
            "semanticCommitType": "feat"
        },
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "automerge": true
        }
    ]
}
